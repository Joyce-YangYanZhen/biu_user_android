<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lin_tv_bg"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:gravity="center">

        <TextView
            android:id="@+id/solar_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="111" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/class_number_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="3dp"
            android:layout_height="14dp"
            android:src="@drawable/zhixian1" />

        <TextView
            android:id="@+id/class_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="56节"
            android:layout_marginLeft="1dp"
            android:textColor="#000000"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/people__number_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="1dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="3dp"
            android:layout_height="14dp"
            android:src="@drawable/zhixian2" />

        <TextView
            android:id="@+id/class_people"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="23人"
            android:layout_marginLeft="1dp"
            android:textColor="#000000"
            android:textSize="12sp" />
    </LinearLayout>


    <TextView
        android:id="@+id/lunar_day"
        android:layout_width="wrap_content"
        android:layout_height="9dp"
        android:text="222"
        android:textColor="@android:color/holo_red_dark"
        android:visibility="gone" />


</LinearLayout>