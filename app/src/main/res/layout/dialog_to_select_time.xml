<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:background="@drawable/share_bg"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_height="@dimen/m270">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv_select_class_time"
                android:layout_marginTop="30dp"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/top_heiziti"
                android:textSize="@dimen/sp15"
                />

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_date_select"
                android:layout_marginTop="@dimen/m20"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/m30"
                android:layout_marginRight="@dimen/m30"
                android:layout_height="40dp">

        </androidx.recyclerview.widget.RecyclerView>
        <!--<androidx.recyclerview.widget.RecyclerView-->
                <!--android:id="@+id/rv_team_list"-->
                <!--android:layout_marginTop="@dimen/m17"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_marginLeft="@dimen/m40"-->
                <!--android:layout_marginRight="@dimen/m40"-->
                <!--android:layout_height="wrap_content">-->
        <!--</androidx.recyclerview.widget.RecyclerView>-->
        <com.noplugins.keepfit.userplatform.util.ui.progressbar.RangeSeekBar
                android:id="@+id/horizontal_scale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"/>


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                    android:id="@+id/dismiss_tv"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/m40"
                    android:textSize="@dimen/sp20"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/m5"
                    android:textColor="@color/color_6D7278"
                    android:text="@string/cancel"
                    />
            <TextView
                    android:id="@+id/ok_tv"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/m40"
                    android:textSize="@dimen/sp20"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/m5"
                    android:textColor="@color/btn_text_color"
                    android:text="@string/alert_dialog_cached_ok"
                    />
        </LinearLayout>

    </LinearLayout>
</FrameLayout>