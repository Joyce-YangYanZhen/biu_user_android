<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
            android:layout_centerInParent="true"
            android:layout_width="@dimen/m321"
            android:background="@drawable/to_phone"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_height="@dimen/m125">

        <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确认拨打 "
                android:layout_marginTop="@dimen/m20"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/contents_text"
                android:textSize="@dimen/sp15"
                />


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/m20">
            <TextView
                    android:id="@+id/dismiss_tv"
                    android:layout_width="@dimen/m86"
                    android:layout_height="@dimen/m36"
                    android:textSize="@dimen/sp15"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:textColor="@color/btn_text_color"
                    android:background="@drawable/button_shape_40"
                    android:text="@string/cancel"
                    android:layout_marginRight="@dimen/m30"
                    />
            <TextView
                    android:id="@+id/phone_tv"
                    android:layout_width="@dimen/m86"
                    android:layout_height="@dimen/m36"
                    android:textSize="@dimen/sp15"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/m30"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/white"
                    android:background="@drawable/shape_btn_bg_40"
                    android:text="@string/tv_ok"
                    />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>