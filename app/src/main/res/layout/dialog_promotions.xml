<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:gravity="center"
              android:layout_height="wrap_content">

    <ImageView
            android:id="@+id/iv_promotions_logo"
            android:layout_width="match_parent"
            android:src="@drawable/rizhi_pop_bg"
            android:layout_marginLeft="@dimen/m10"
            android:layout_marginRight="@dimen/m10"
            android:layout_height="@dimen/m197"/>

    <ImageView
            android:id="@+id/iv_close"
            android:layout_marginTop="@dimen/m23"
            android:layout_width="@dimen/m25"
            android:layout_height="@dimen/m25"
            android:src="@drawable/icon_close"/>

</LinearLayout>