<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">


    <RelativeLayout
            android:layout_width="match_parent"
            android:background="@drawable/dairy_item"
            android:layout_height="188dp">

        <LinearLayout
                android:id="@+id/sijiao"
                android:layout_width="72dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/bg_lv"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="21dp"
                android:layout_height="28dp">

            <TextView
                    android:id="@+id/class_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp13"
                    android:text="@string/tv133"
                    android:textColor="@color/white"/>
        </LinearLayout>

        <TextView
                android:id="@+id/time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="昨天18:00-20:00"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/m20"
                android:layout_marginTop="24dp"
                android:layout_alignParentTop="true"
                android:textColor="@color/color_9B9B9B"
                android:textSize="@dimen/sp12"
                />


        <LinearLayout
                android:id="@+id/center"
                android:layout_below="@+id/sijiao"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/m10"
                android:orientation="vertical"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:id="@+id/ll_name"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/m25"
                    android:layout_height="wrap_content">

                <ImageView
                        android:layout_width="@dimen/m16"
                        android:layout_height="@dimen/m16"
                        android:src="@drawable/rizhi_icon"
                        />

                <TextView
                        android:id="@+id/class_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="增肌塑形·体能提升"
                        android:layout_marginLeft="3dp"
                        android:textColor="@color/top_heiziti"
                        android:textSize="@dimen/sp13"
                        />

            </LinearLayout>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/m10"
                    android:layout_marginLeft="@dimen/m25"
                    android:layout_height="wrap_content">

                <ImageView
                        android:layout_width="@dimen/m16"
                        android:layout_height="@dimen/m16"
                        android:src="@drawable/shizhong_icon"
                        />

                <TextView
                        android:id="@+id/start_end_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="9:00-10:00"
                        android:layout_marginLeft="3dp"
                        android:textColor="@color/top_heiziti"
                        android:textSize="@dimen/sp13"
                        />


            </LinearLayout>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/m25"
                    android:layout_marginTop="@dimen/m10"
                    android:layout_height="wrap_content">

                <ImageView
                        android:layout_width="@dimen/m16"
                        android:layout_height="@dimen/m16"
                        android:src="@drawable/ren_icon"
                        />

                <TextView
                        android:id="@+id/teacher_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="教练-廖胜云"
                        android:layout_marginLeft="3dp"
                        android:textColor="@color/top_heiziti"
                        android:textSize="@dimen/sp13"
                        />


            </LinearLayout>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/m25"
                    android:layout_marginTop="@dimen/m10"
                    android:layout_height="wrap_content">

                <ImageView
                        android:layout_width="@dimen/m16"
                        android:layout_height="@dimen/m16"
                        android:src="@drawable/ditu_icon"
                        />

                <TextView
                        android:id="@+id/adress_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="徐汇区小角落里面的小疙瘩里面"
                        android:layout_marginLeft="3dp"
                        android:textColor="@color/top_heiziti"
                        android:textSize="@dimen/sp13"
                        />
            </LinearLayout>

        </LinearLayout>


        <ImageView
                android:layout_width="@dimen/m16"
                android:layout_height="@dimen/m16"
                android:layout_marginRight="@dimen/m15"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/m20"
                android:src="@drawable/shanchu_btn"/>
        <LinearLayout
                android:orientation="vertical"
                android:id="@+id/shanchu_btn"
                android:layout_width="50dp"
                android:background="@color/transparent"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/m10"
                android:layout_height="50dp">

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>