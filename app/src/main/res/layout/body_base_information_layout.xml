<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:background="@drawable/body_bg1"
                android:layout_marginTop="@dimen/m6"
                android:layout_height="@dimen/m59">


    <LinearLayout
            android:id="@+id/lin1"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/m20"
            android:layout_centerVertical="true"
            android:layout_height="match_parent">

        <ImageView
                android:layout_width="30dp"
                android:src="@drawable/shengao"
                android:layout_gravity="center_vertical"
                android:layout_height="30dp"/>

        <EditText
                android:id="@+id/shengao_edit"
                android:layout_width="@dimen/m40"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp15"
                android:text="0"
                android:enabled="false"
                android:singleLine="true"
                android:maxLength="4"
                android:inputType="number|numberDecimal"
                android:digits="0123456789"
                android:background="@null"
                android:paddingLeft="@dimen/m2"
                android:gravity="left|center_vertical"
                android:layout_marginLeft="@dimen/m1"
                android:layout_gravity="center_vertical"
                android:textColor="@color/top_heiziti"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp10"
                android:text="@string/tv194"
                android:layout_marginTop="@dimen/m2"
                android:layout_gravity="center_vertical"
                android:textColor="@color/color_6D7278"
        />
    </LinearLayout>

    <LinearLayout
            android:layout_toRightOf="@+id/lin1"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/m40"
            android:layout_centerVertical="true"
            android:layout_height="match_parent">

        <ImageView
                android:layout_width="30dp"
                android:src="@drawable/chen_icon"
                android:layout_gravity="center_vertical"
                android:layout_height="30dp"/>

        <EditText
                android:id="@+id/tizhong_edit"
                android:layout_width="@dimen/m40"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp15"
                android:text="0"
                android:gravity="left|center_vertical"
                android:enabled="false"
                android:background="@null"
                android:paddingLeft="@dimen/m2"
                android:maxLength="4"
                android:singleLine="true"
                android:inputType="number"
                android:layout_marginLeft="@dimen/m1"
                android:layout_gravity="center_vertical"
                android:textColor="@color/top_heiziti"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp10"
                android:text="@string/tv195"
                android:layout_marginTop="@dimen/m2"
                android:layout_gravity="center_vertical"
                android:textColor="@color/color_6D7278"
        />
    </LinearLayout>

    <ImageView
            android:id="@+id/base_information_edit"
            android:layout_width="@dimen/m20"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/m20"
            android:layout_centerVertical="true"
            android:layout_height="@dimen/m20"
            android:src="@drawable/bianji"
    />

    <TextView
            android:id="@+id/save_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/m20"
            android:visibility="gone"
            android:textColor="@color/top_heiziti"
            android:textSize="@dimen/sp18"
            android:text="@string/tv199"/>
</RelativeLayout>