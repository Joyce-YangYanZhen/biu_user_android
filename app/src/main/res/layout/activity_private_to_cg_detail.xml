<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activity.changguan.ChaungguanDetailActivity">
    <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="@dimen/m64">
        <ImageView
                android:id="@+id/back_btn"
                android:layout_width="28dp"
                android:layout_height="@dimen/m18"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/m15"
                android:layout_marginLeft="@dimen/m20"
                android:src="@drawable/back"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cg_details"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/m10"
                android:textSize="@dimen/sp20"
                android:textColor="@color/top_heiziti"/>

        <ImageView
                android:id="@+id/share_btn"
                android:layout_width="@dimen/m25"
                android:layout_height="@dimen/m25"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/m15"
                android:layout_marginRight="@dimen/m20"
                android:src="@drawable/share_icon"/>
    </RelativeLayout>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/m200">

                <com.ms.banner.Banner
                        android:id="@+id/banner"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/m200"
                        app:delay_time="2000"
                        app:is_auto_play="true"
                        app:is_loop="true"/>

                <LinearLayout
                        android:layout_width="50dp"
                        android:layout_height="48dp"
                        android:layout_gravity="right|top"
                        android:layout_marginRight="@dimen/m7"
                        android:background="@drawable/shape_bg_shoucang"
                        android:gravity="center">
                    <ImageView
                            android:id="@+id/iv_collect"
                            android:layout_width="@dimen/m20"
                            android:layout_height="@dimen/m20"
                            android:src="@drawable/xin_2"
                            />
                </LinearLayout>

            </FrameLayout>
            <www.linwg.org.lib.LCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:shadowStartAlpha="10"
                    app:cornerRadius="@dimen/m8"
                    app:shadowSize="@dimen/m2"
                    android:paddingTop="@dimen/m5">
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/m5"
                        android:layout_marginBottom="@dimen/m5"
                        android:background="@drawable/shape_btn_bg_white">

                    <TextView
                            android:id="@+id/tv_chuangguan_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="场馆名称"
                            android:textSize="@dimen/sp15"
                            android:textColor="@color/contents_text"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="@dimen/m20"
                            android:layout_toLeftOf="@+id/tv_fenshu"
                            />

                    <ImageView
                            android:id="@+id/iv_zuji"
                            android:layout_width="@dimen/m11"
                            android:layout_height="@dimen/m12"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/m20"
                            android:visibility="invisible"
                            android:src="@drawable/zuji"/>

                    <TextView
                            android:id="@+id/tv_fenshu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="9.5分"
                            android:layout_marginRight="@dimen/m10"
                            android:textColor="@color/btn_text_color"
                            android:textSize="@dimen/sp13"
                            android:layout_toLeftOf="@+id/iv_zuji"/>

                    <TextView
                            android:id="@+id/tv_type_size"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_chuangguan_name"
                            android:hint="综合会所 | 2000平方米"
                            android:layout_marginTop="@dimen/m10"
                            android:layout_marginLeft="@dimen/m20"
                            android:layout_alignParentLeft="true"
                            android:layout_toLeftOf="@+id/tv_work_time"
                            android:textColor="@color/color_6D7278"
                            android:textSize="@dimen/sp13"
                            />

                    <TextView
                            android:id="@+id/tv_work_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_chuangguan_name"
                            android:layout_alignParentRight="true"
                            android:hint="营业时间 10：30-22：30"
                            android:layout_marginTop="@dimen/m10"
                            android:layout_marginRight="@dimen/m20"
                            android:textColor="@color/color_6D7278"
                            android:textSize="@dimen/sp13"
                            />

                    <TextView
                            android:id="@+id/tv_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_type_size"
                            android:hint="杭州市xxx区xxx路22号"
                            android:layout_marginLeft="@dimen/m20"
                            android:layout_alignParentLeft="true"
                            android:layout_marginTop="@dimen/m15"
                            android:drawableLeft="@drawable/dizhi_dw"
                            android:drawablePadding="@dimen/m10"
                            android:textColor="@color/color_6D7278"
                            android:textSize="@dimen/sp13"
                            android:layout_toLeftOf="@+id/tv_toPhone"
                            />

                    <TextView
                            android:id="@+id/tv_toPhone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_type_size"
                            android:layout_alignParentRight="true"
                            android:text="咨询场馆"
                            android:drawablePadding="@dimen/m10"
                            android:drawableLeft="@drawable/kefu"
                            android:textColor="@color/color_6D7278"
                            android:textSize="@dimen/sp13"
                            android:layout_marginTop="@dimen/m15"
                            android:layout_marginRight="@dimen/m20"
                            />
                </RelativeLayout>
            </www.linwg.org.lib.LCardView>

            <www.linwg.org.lib.LCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:shadowStartAlpha="10"
                    app:cornerRadius="@dimen/m8"
                    app:shadowSize="@dimen/m2"
                    android:layout_marginTop="@dimen/m5"
                    android:paddingTop="@dimen/m10">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/m15"
                        android:background="@drawable/shape_btn_bg_white">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tv_cg_gongneng"
                            android:layout_marginLeft="@dimen/m10"
                            android:textSize="@dimen/sp12"
                            android:textColor="@color/color_6D7278"/>

                    <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_features"
                            android:layout_width="match_parent"
                            android:layout_marginRight="@dimen/m10"
                            android:layout_marginLeft="@dimen/m10"
                            android:layout_height="wrap_content"/>
                </LinearLayout>
            </www.linwg.org.lib.LCardView>


            <TextView
                    android:id="@+id/tv_next_select"
                    android:layout_width="@dimen/m200"
                    android:layout_height="@dimen/m60"
                    android:background="@drawable/btn_bg_ok"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/m15"
                    android:text="立即购买"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp20"
                    android:layout_marginBottom="@dimen/m30"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>