<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
            android:id="@+id/ll_bitmap"
            android:layout_width="match_parent"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/shape_btn_bg_white"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="200dp"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_height="match_parent">

        <ImageView
                android:layout_width="92dp"
                android:layout_marginTop="@dimen/m12"
                android:layout_height="67dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/logo_top"
                />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp10"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/m2"
                android:textColor="@color/color_bk_black"
                android:text="@string/tv137"
                />

        <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:textSize="@dimen/sp13"-->
                <!--android:layout_gravity="center_horizontal"-->
                <!--android:layout_marginLeft="30dp"-->
                <!--android:layout_marginRight="30dp"-->
                <!--android:layout_marginTop="@dimen/m15"-->
                <!--android:gravity="left"-->
                <!--android:textColor="@color/top_heiziti"-->
                <!--android:text="@string/tv138"-->
                <!--/>-->

        <ImageView
                android:id="@+id/cut_image"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:src="@drawable/demo_img"
                android:adjustViewBounds="true"
                android:layout_marginBottom="@dimen/m5"
                android:layout_height="0dp"/>


        <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="52dp"
                android:layout_marginRight="52dp"
                android:layout_marginBottom="@dimen/m10"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">

            <ImageView
                    android:id="@+id/iv_erweima"
                    android:layout_width="49dp"
                    android:layout_height="49dp"
                    android:src="@drawable/erweima"
                    />

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/m18"
                    android:layout_height="wrap_content">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/sp10"
                        android:gravity="left"
                        android:textColor="@color/top_heiziti"
                        android:text="@string/tv139"
                        />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp10"
                        android:gravity="left"
                        android:textColor="@color/top_heiziti"
                        android:text="@string/tv140"
                        />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:background="@drawable/share_bg"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_height="191dp">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv136"
                android:layout_marginTop="30dp"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/top_heiziti"
                android:textSize="@dimen/sp15"
                />

        <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="43dp"
                android:layout_marginTop="@dimen/m17"
                android:paddingRight="43dp"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:id="@+id/ll_wx"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="wrap_content">

                <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/umeng_socialize_wechat"
                        />
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/ll_pyq"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="wrap_content">

                <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/pengyouquan"
                        />
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/ll_qq"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="wrap_content">

                <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/qq"
                        />
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/ll_wb"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="wrap_content">

                <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/wbo"
                        />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/color_f1f1f1"
                android:layout_marginTop="29dp"
                android:layout_height="@dimen/m2">

        </LinearLayout>


        <TextView
                android:id="@+id/dismiss_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp20"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/m5"
                android:textColor="@color/color_bk_black"
                android:text="@string/cancel"
                />
    </LinearLayout>


</RelativeLayout>