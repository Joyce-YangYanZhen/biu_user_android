<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:roundiv="http://schemas.android.com/tools"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:paddingTop="@dimen/m5"
              android:id="@+id/ll_team_item"
              android:paddingBottom="@dimen/m5">

    <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/m10"
            android:layout_marginLeft="@dimen/m15">

        <com.noplugins.keepfit.userplatform.util.ui.CustomRoundAngleImageView
                android:id="@+id/iv_private_logo"
                android:layout_width="@dimen/m80"
                android:layout_height="@dimen/m80"
                roundiv:radius="@dimen/m10"
                android:src="@color/color_bg_grey"/>

        <TextView
                android:id="@+id/tv_private_pinfen"
                android:layout_width="@dimen/m30"
                android:layout_height="@dimen/m15"
                android:text="9.7分"
                android:textSize="@dimen/sp10"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/shape_btn_bg_longgray"/>
    </FrameLayout>

    <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/m80"
            android:layout_marginTop="@dimen/m10">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_private_name"
                android:text="私教名称"
                android:textSize="@dimen/sp15"
                android:textColor="@color/contents_text"
                android:layout_marginLeft="@dimen/m18"
                android:layout_toLeftOf="@+id/ll_price"

                android:layout_alignParentLeft="true"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_class_cg"
                android:layout_marginLeft="@dimen/m18"
                android:text="场馆名称"
                android:textColor="@color/color_4A4A4A"
                android:layout_marginTop="@dimen/m10"
                android:layout_marginBottom="@dimen/m8"
                android:maxLines="1"
                android:textSize="@dimen/sp12"
                android:layout_below="@+id/tv_private_name"
                android:layout_alignParentLeft="true"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_juli"
                android:drawableLeft="@drawable/juli"
                android:layout_below="@+id/tv_private_name"
                android:text="1.2km"
                android:textColor="@color/color_4A4A4A"
                android:textSize="@dimen/sp12"
                android:layout_marginTop="@dimen/m10"
                android:layout_marginBottom="@dimen/m8"
                android:layout_marginLeft="@dimen/m20"
                android:layout_toRightOf="@+id/tv_class_cg"/>


       <TextView
               android:id="@+id/tv_class_teacher"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginLeft="@dimen/m18"
               android:text="场馆名称"
               android:textColor="@color/color_4A4A4A"
               android:layout_marginTop="@dimen/m8"
               android:layout_marginBottom="@dimen/m8"
               android:maxLines="1"
               android:textSize="@dimen/sp12"
               android:layout_below="@+id/tv_class_cg"
               android:layout_alignParentLeft="true"
               />

        <TextView
                android:id="@+id/tv_class_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/m18"
                android:text="8:00-9:00"
                android:textColor="@color/color_4A4A4A"
                android:layout_marginTop="@dimen/m8"
                android:layout_marginBottom="@dimen/m8"
                android:maxLines="1"
                android:textSize="@dimen/sp12"
                android:layout_below="@+id/tv_class_cg"
                android:layout_toRightOf="@+id/tv_class_teacher"
                />

        <TextView
                android:id="@+id/tv_pay"
                android:layout_width="@dimen/m60"
                android:layout_height="@dimen/m30"
                android:background="@drawable/shape_btn_bg_40"
                android:layout_marginRight="@dimen/m10"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/ll_price"
                android:textSize="@dimen/sp13"
                android:layout_marginTop="@dimen/m10"
                android:textColor="@color/white"
                android:text="购买"
                android:gravity="center"/>
        <LinearLayout
                android:id="@+id/ll_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/m20"
                android:layout_marginRight="@dimen/m20"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">
            <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥19"
                    android:textColor="@color/color_bg_black"
                    android:textSize="@dimen/sp20"/>

        </LinearLayout>

        <LinearLayout
                android:id="@+id/ll_icon"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/m20"
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/m20">
            <ImageView
                    android:id="@+id/iv_shoucang"
                    android:layout_width="@dimen/m20"
                    android:layout_height="@dimen/m20"
                    android:src="@drawable/collect"
                    android:visibility="gone"
                    android:layout_marginLeft="@dimen/m10"
                    />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>