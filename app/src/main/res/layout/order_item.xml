<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:id="@+id/rl_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <ImageView
            android:id="@+id/img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="@dimen/m9"
            android:layout_marginLeft="@dimen/m10"
            android:src="@drawable/touxiang_zhifu"
            />

    <TextView
            android:id="@+id/class_type"
            android:layout_toRightOf="@+id/img"
            android:layout_width="@dimen/m66"
            android:background="@drawable/zhifu_hui"
            android:gravity="center"
            android:layout_height="@dimen/m22"
            android:text="团操课程"
            android:layout_marginLeft="@dimen/m10"
            android:textSize="@dimen/sp13"
            android:textColor="@color/color_4A4A4A"
            />

    <TextView
            android:id="@+id/teacher_name"
            android:layout_toRightOf="@+id/class_type"
            android:layout_toLeftOf="@+id/zhifu_status"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/m22"
            android:gravity="center_vertical|left"
            android:text="jams bond"
            android:textSize="@dimen/sp13"
            android:layout_marginLeft="@dimen/m5"
            android:textColor="@color/color_6D7278"
            />

    <TextView
            android:id="@+id/cource_name"
            android:layout_below="@+id/class_type"
            android:layout_toRightOf="@+id/img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="动感单车·瑜伽"
            android:layout_marginTop="@dimen/m10"
            android:textSize="@dimen/sp13"
            android:layout_marginLeft="@dimen/m10"
            android:textColor="@color/top_heiziti"
            />

    <TextView
            android:id="@+id/time_tv"
            android:layout_toRightOf="@+id/img"
            android:layout_below="@+id/cource_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2019-07-15 15:20-16:05"
            android:layout_marginTop="@dimen/m10"
            android:textSize="@dimen/sp13"
            android:layout_marginLeft="@dimen/m10"
            android:textColor="@color/color_4A4A4A"
            />

    <TextView
            android:id="@+id/item_dismiss"
            android:layout_width="87dp"
            android:background="@drawable/quxiao_bg"
            android:layout_below="@+id/time_tv"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/m19"
            android:layout_height="@dimen/m30"
            android:textColor="@color/color_6D7278"
            android:textSize="@dimen/sp13"
            android:visibility="gone"
            android:text="@string/tv205"
            />

    <TextView
            android:id="@+id/zhifu_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已支付"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/m20"
            android:layout_marginTop="@dimen/m2"
            android:textSize="@dimen/sp12"
            android:textColor="@color/color_4A4A4A"
            />

    <TextView
            android:id="@+id/price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥ 45"
            android:layout_marginRight="@dimen/m20"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/m12"
            android:layout_below="@+id/zhifu_status"
            android:textSize="@dimen/sp15"
            android:textColor="@color/top_heiziti"
            />
</RelativeLayout>