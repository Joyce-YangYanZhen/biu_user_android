<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activity.info.AccountSecurityActivity">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/m64"
            android:background="@drawable/daohanglan">

        <ImageView
                android:id="@+id/back_btn"
                android:layout_width="28dp"
                android:layout_height="@dimen/m18"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/m20"
                android:layout_marginBottom="@dimen/m15"
                android:src="@drawable/icon_back" />

        <TextView
                android:id="@+id/title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/m10"
                android:text="@string/setting"
                android:textColor="@color/top_heiziti"
                android:textSize="@dimen/sp20"
                android:textStyle="bold" />
    </RelativeLayout>

    <www.linwg.org.lib.LCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:leftTopCornerRadius="@dimen/m10"
            app:rightBottomCornerRadius="@dimen/dp_10"
            app:leftBottomCornerRadius="@dimen/m10"
            app:rightTopCornerRadius="@dimen/m10"
            app:leftShadowWidth="0dp"
            app:rightShadowWidth="0dp">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <RelativeLayout
                    android:id="@+id/rl_mine_info"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/m51">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="个人资料"
                        android:textColor="@color/color_4A4A4A"
                        android:textSize="@dimen/sp15"
                        android:layout_marginLeft="@dimen/m20"
                        android:layout_centerVertical="true"/>
                <ImageView
                        android:layout_width="@dimen/m16"
                        android:layout_height="@dimen/m16"
                        android:src="@drawable/right_jt"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/m20"
                        android:layout_centerVertical="true"/>
            </RelativeLayout>
            <RelativeLayout
                    android:id="@+id/rl_account"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/m51">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tv101"
                        android:textColor="@color/color_4A4A4A"
                        android:textSize="@dimen/sp15"
                        android:layout_marginLeft="@dimen/m20"
                        android:layout_centerVertical="true"/>
                <ImageView
                        android:layout_width="@dimen/m16"
                        android:layout_height="@dimen/m16"
                        android:src="@drawable/right_jt"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/m20"
                        android:layout_centerVertical="true"/>
            </RelativeLayout>
        </LinearLayout>
    </www.linwg.org.lib.LCardView>

    <www.linwg.org.lib.LCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:leftTopCornerRadius="@dimen/m10"
            app:rightBottomCornerRadius="@dimen/dp_10"
            app:leftBottomCornerRadius="@dimen/m10"
            app:rightTopCornerRadius="@dimen/m10"
            app:leftShadowWidth="0dp"
            app:rightShadowWidth="0dp">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <RelativeLayout
                    android:id="@+id/rl_about"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/m51">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tv103"
                        android:textColor="@color/color_4A4A4A"
                        android:textSize="@dimen/sp15"
                        android:layout_marginLeft="@dimen/m20"
                        android:layout_centerVertical="true"/>
                <ImageView
                        android:layout_width="@dimen/m16"
                        android:layout_height="@dimen/m16"
                        android:src="@drawable/right_jt"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/m20"
                        android:layout_centerVertical="true"/>
            </RelativeLayout>
            <RelativeLayout
                    android:id="@+id/rl_risk"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/m51">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tv_risk"
                        android:textColor="@color/color_4A4A4A"
                        android:textSize="@dimen/sp15"
                        android:layout_marginLeft="@dimen/m20"
                        android:layout_centerVertical="true"/>
                <ImageView
                        android:layout_width="@dimen/m16"
                        android:layout_height="@dimen/m16"
                        android:src="@drawable/right_jt"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/m20"
                        android:layout_centerVertical="true"/>
            </RelativeLayout>
            <RelativeLayout
                    android:id="@+id/rl_xieyi"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/m51">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tv_xy"
                        android:textColor="@color/color_4A4A4A"
                        android:textSize="@dimen/sp15"
                        android:layout_marginLeft="@dimen/m20"
                        android:layout_centerVertical="true"/>
                <ImageView
                        android:layout_width="@dimen/m16"
                        android:layout_height="@dimen/m16"
                        android:src="@drawable/right_jt"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/m20"
                        android:layout_centerVertical="true"/>
            </RelativeLayout>
        </LinearLayout>
    </www.linwg.org.lib.LCardView>

    <www.linwg.org.lib.LCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:leftTopCornerRadius="@dimen/m10"
            app:rightBottomCornerRadius="@dimen/dp_10"
            app:leftBottomCornerRadius="@dimen/m10"
            app:rightTopCornerRadius="@dimen/m10"
            app:leftShadowWidth="0dp"
            app:rightShadowWidth="0dp">
        <RelativeLayout
                android:id="@+id/rl_quit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/m50">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_quit"
                    android:textColor="@color/color_4A4A4A"
                    android:textSize="@dimen/sp15"
                    android:layout_marginLeft="@dimen/m20"
                    android:layout_centerVertical="true"/>
            <ImageView
                    android:layout_width="@dimen/m16"
                    android:layout_height="@dimen/m16"
                    android:src="@drawable/right_jt"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/m20"
                    android:layout_centerVertical="true"/>
        </RelativeLayout>
    </www.linwg.org.lib.LCardView>
</LinearLayout>