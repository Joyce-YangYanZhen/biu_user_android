<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activity.changguan.ChaungguanDetailActivity">
    <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="@dimen/m64">
        <ImageView
                android:id="@+id/back_btn"
                android:layout_width="28dp"
                android:layout_height="@dimen/m18"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/m15"
                android:layout_marginLeft="@dimen/m20"
                android:src="@drawable/back"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cg_details"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/m10"
                android:textSize="@dimen/sp20"
                android:textColor="@color/top_heiziti"/>

        <ImageView
                android:id="@+id/share_btn"
                android:layout_width="@dimen/m25"
                android:layout_height="@dimen/m25"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/m15"
                android:layout_marginRight="@dimen/m20"
                android:src="@drawable/share_icon"/>
    </RelativeLayout>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/m200">

                <com.ms.banner.Banner
                        android:id="@+id/banner"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/m200"
                        app:delay_time="2000"
                        app:is_auto_play="true"
                        app:is_loop="true"/>

                <LinearLayout
                        android:id="@+id/lin_iv_collection"
                        android:layout_width="50dp"
                        android:layout_height="48dp"
                        android:layout_gravity="right|top"
                        android:layout_marginRight="@dimen/m7"
                        android:background="@drawable/shape_bg_shoucang"
                        android:gravity="center">
                    <ImageView
                            android:id="@+id/iv_collect"
                            android:layout_width="@dimen/m20"
                            android:layout_height="@dimen/m20"
                            android:src="@drawable/xin_2"
                    />
                </LinearLayout>

            </FrameLayout>
            <www.linwg.org.lib.LCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:shadowStartAlpha="10"
                    app:cornerRadius="@dimen/m8"
                    app:shadowSize="@dimen/m2"
                    android:paddingTop="@dimen/m5">
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/m5"
                        android:layout_marginBottom="@dimen/m5"
                        android:background="@drawable/shape_btn_bg_white">

                    <TextView
                            android:id="@+id/tv_chuangguan_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="场馆名称"
                            android:textSize="@dimen/sp15"
                            android:textColor="@color/contents_text"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="@dimen/m20"
                            android:layout_toLeftOf="@+id/tv_fenshu"
                    />



                    <TextView
                            android:id="@+id/tv_fenshu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="9.5分"
                            android:layout_marginRight="@dimen/m10"
                            android:layout_marginLeft="@dimen/m20"
                            android:textColor="@color/btn_text_color"
                            android:textSize="@dimen/sp13"
                            android:layout_toLeftOf="@+id/tv_toPhone"/>

                    <TextView
                            android:id="@+id/tv_type_size"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_chuangguan_name"
                            android:hint="综合会所 | 2000平方米"
                            android:layout_marginTop="@dimen/m10"
                            android:layout_marginLeft="@dimen/m20"
                            android:layout_alignParentLeft="true"
                            android:textColor="@color/color_6D7278"
                            android:textSize="@dimen/sp13"
                    />

                    <TextView
                            android:id="@+id/tv_work_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_type_size"
                            android:hint="营业时间 10：30-22：30"
                            android:layout_marginTop="@dimen/m10"
                            android:layout_marginLeft="@dimen/m20"
                            android:layout_alignParentLeft="true"
                            android:textColor="@color/color_6D7278"
                            android:textSize="@dimen/sp13"
                    />

                    <TextView
                            android:id="@+id/tv_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_work_time"
                            android:hint="杭州市xxx区xxx路22号"
                            android:layout_marginLeft="@dimen/m20"
                            android:layout_alignParentLeft="true"
                            android:layout_marginTop="@dimen/m15"
                            android:drawableLeft="@drawable/dizhi_dw"
                            android:drawablePadding="@dimen/m10"
                            android:textColor="@color/color_6D7278"
                            android:textSize="@dimen/sp13"
                    />

                    <TextView
                            android:id="@+id/tv_toPhone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="咨询场馆"
                            android:drawablePadding="@dimen/m10"
                            android:drawableLeft="@drawable/kefu"
                            android:textColor="@color/color_6D7278"
                            android:textSize="@dimen/sp13"
                            android:layout_marginRight="@dimen/m20"
                    />
                </RelativeLayout>
            </www.linwg.org.lib.LCardView>

            <www.linwg.org.lib.LCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:shadowStartAlpha="10"
                    app:cornerRadius="@dimen/m8"
                    app:shadowSize="@dimen/m2"
                    android:layout_marginTop="@dimen/m5"
                    android:paddingTop="@dimen/m10">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="@dimen/m5"
                        android:layout_marginBottom="@dimen/m5"
                        android:background="@drawable/shape_btn_bg_white">
                    <LinearLayout android:layout_width="match_parent"
                                  android:orientation="horizontal"
                                  android:layout_gravity="center_vertical"
                                  android:layout_height="wrap_content">
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/tv_cg_gongneng"
                                android:layout_marginLeft="@dimen/m10"
                                android:textSize="@dimen/sp12"
                                android:textColor="@color/color_6D7278"/>

                        <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rv_features"
                                android:layout_width="match_parent"
                                android:layout_marginRight="@dimen/m10"
                                android:layout_marginLeft="@dimen/m10"
                                android:layout_height="wrap_content"/>
                    </LinearLayout>

                </LinearLayout>
            </www.linwg.org.lib.LCardView>

            <www.linwg.org.lib.LCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:shadowStartAlpha="10"
                    app:cornerRadius="@dimen/m8"
                    app:shadowSize="@dimen/m2"
                    android:layout_marginTop="@dimen/m5"
                    android:paddingTop="@dimen/m10">
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:background="@drawable/shape_btn_bg_white">
                    <!--<ImageView-->
                            <!--android:id="@+id/iv_yiwen"-->
                            <!--android:layout_width="@dimen/m20"-->
                            <!--android:layout_height="@dimen/m20"-->
                            <!--android:src="@drawable/yiwen"-->
                            <!--android:layout_marginLeft="@dimen/m15"-->
                            <!--android:layout_alignParentLeft="true"/>-->
                    <TextView
                            android:id="@+id/tv_select_time"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/m20"
                            android:layout_marginLeft="@dimen/m15"
                            android:layout_alignParentLeft="true"
                            android:textColor="@color/color_6D7278"
                            android:text="请选择你的锻炼时间"/>
                    <LinearLayout android:layout_width="wrap_content"
                                  android:layout_below="@+id/tv_select_time"
                                  android:orientation="horizontal"
                                  android:layout_marginLeft="@dimen/m30"
                                  android:layout_alignParentLeft="true"
                                  android:layout_marginTop="@dimen/m12"
                                  android:gravity="center_vertical"
                                  android:layout_toLeftOf="@+id/tv_hour_lin"
                                  android:layout_height="wrap_content">
                        <TextView
                                android:id="@+id/tv_day"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2019-07-08"
                                android:textSize="@dimen/sp14"
                                android:textColor="@color/contents_text"/>

                        <ImageView android:layout_width="@dimen/m14"
                                   android:layout_marginLeft="@dimen/m5"
                                   android:layout_height="@dimen/m14"
                                   android:src="@drawable/xiala"/>
                    </LinearLayout>

                    <LinearLayout
                            android:id="@+id/tv_hour_lin"
                            android:layout_width="wrap_content"
                                  android:orientation="horizontal"
                                  android:layout_marginTop="@dimen/m12"
                                  android:layout_alignParentRight="true"
                                  android:gravity="center_vertical"
                                  android:layout_marginRight="@dimen/m30"
                                  android:layout_below="@+id/tv_select_time"
                                  android:layout_height="wrap_content">
                        <TextView
                                android:id="@+id/tv_hour"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="8:20 - 9:20"
                                android:textSize="@dimen/sp14"
                                android:textColor="@color/contents_text"/>

                        <ImageView android:layout_width="@dimen/m14"
                                   android:layout_marginLeft="@dimen/m5"
                                   android:layout_height="@dimen/m14"
                                   android:src="@drawable/xiala"/>
                    </LinearLayout>


                    <TextView
                            android:id="@+id/tv_price"
                            android:layout_width="@dimen/m80"
                            android:layout_height="@dimen/m40"
                            android:textSize="@dimen/sp20"
                            android:textColor="@color/contents_text"
                            android:layout_below="@+id/tv_hour_lin"
                            android:text="¥0"
                            android:gravity="center"
                            android:layout_marginTop="@dimen/m21"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="@dimen/m57"/>

                    <TextView
                            android:id="@+id/tv_pay"
                            android:layout_width="@dimen/m90"
                            android:layout_height="@dimen/m40"
                            android:gravity="center"
                            android:background="@drawable/pay_1"
                            android:textColor="@color/white"
                            android:layout_below="@+id/tv_hour_lin"
                            android:layout_alignParentRight="true"
                            android:textSize="@dimen/sp15"
                            android:layout_marginTop="@dimen/m21"
                            android:layout_marginRight="@dimen/m40"
                            android:text="@string/tv_lg_pay"/>

                    <TextView
                            android:layout_below="@+id/tv_pay"
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:layout_marginTop="@dimen/m10"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_6D7278"
                            android:textSize="@dimen/sp10"
                            android:layout_marginBottom="@dimen/m5"
                            android:text="@string/tv_cg_tips"/>
                </RelativeLayout>

            </www.linwg.org.lib.LCardView>

            <www.linwg.org.lib.LCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:shadowStartAlpha="10"
                    app:cornerRadius="@dimen/m8"
                    app:shadowSize="@dimen/m2"
                    android:layout_marginTop="@dimen/m5"
                    android:paddingTop="@dimen/m10">
                <RelativeLayout
                        android:id="@+id/fl_cg_price_tips"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/m51"
                        android:gravity="center_vertical">
                    <TextView
                            android:id="@+id/tv_label_tips"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|left"
                            android:layout_marginLeft="@dimen/m10"
                            android:layout_centerVertical="true"
                            android:textColor="@color/color_181818"
                            android:textSize="@dimen/sp15"
                            android:text="@string/tv_cg_price_tips"/>

                    <TextView
                            android:id="@+id/tv_low_prices_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_toLeftOf="@+id/tv_low_prices"
                            android:layout_marginLeft="@dimen/m10"
                            android:layout_centerVertical="true"
                            android:textColor="@color/color_181818"
                             android:layout_marginRight="@dimen/m10"
                            android:textSize="@dimen/sp15"/>
                    <TextView
                            android:id="@+id/tv_low_prices"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_toLeftOf="@+id/iv_youjiantou"
                            android:layout_marginRight="@dimen/m10"
                            android:layout_marginLeft="@dimen/m10"
                            android:layout_centerVertical="true"
                            android:textColor="@color/color_181818"
                            android:textSize="@dimen/sp15"/>

                    <ImageView
                            android:id="@+id/iv_youjiantou"
                            android:layout_width="@dimen/m19"
                            android:layout_height="@dimen/m19"
                            android:layout_gravity="right|center_vertical"
                            android:layout_marginRight="@dimen/m15"
                            android:layout_centerVertical="true"
                            android:src="@drawable/you_jiantou"
                            android:layout_alignParentRight="true"/>
                </RelativeLayout>
            </www.linwg.org.lib.LCardView>

            <www.linwg.org.lib.LCardView
                    android:id="@+id/rl_private"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:shadowStartAlpha="10"
                    app:cornerRadius="@dimen/m8"
                    app:shadowSize="@dimen/m2"
                    android:layout_marginTop="@dimen/m5"
                    android:paddingTop="@dimen/m10">
                <RelativeLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:background="@drawable/shape_btn_bg_white">
                    <TextView
                            android:text="@string/tv_cg_private"
                            android:textSize="@dimen/sp15"
                            android:layout_width="@dimen/m90"
                            android:layout_height="@dimen/m31"
                            android:gravity="center"
                            android:layout_alignParentLeft="true"
                            android:background="@drawable/small_title_bg"
                            android:id="@+id/tv_cg_private"
                            android:textColor="@color/white"/>

                    <TextView
                            android:id="@+id/tv_private_all"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/m40"
                            android:text="@string/tv_all"
                            android:textSize="@dimen/sp15"
                            android:layout_marginRight="@dimen/m20"
                            android:gravity="center"
                            android:visibility="visible"
                            android:drawableRight="@drawable/you_jiantou"
                            android:drawablePadding="@dimen/m5"
                            android:layout_alignParentRight="true"
                            android:textColor="@color/btn_text_color"/>
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:layout_below="@+id/tv_cg_private"
                            android:layout_marginBottom="@dimen/m10">
                        <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rv_private"
                                android:layout_marginTop="@dimen/m10"
                                android:layout_below="@+id/tv_private_all"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                    </LinearLayout>
                </RelativeLayout>
            </www.linwg.org.lib.LCardView>

            <www.linwg.org.lib.LCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:shadowStartAlpha="10"
                    app:cornerRadius="@dimen/m8"
                    app:shadowSize="@dimen/m2"
                    android:layout_marginTop="@dimen/m5"
                    android:paddingTop="@dimen/m10">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/m5"
                        android:orientation="vertical"
                        android:background="@drawable/shape_btn_bg_white">
                    <TextView
                            android:text="@string/tv_cg_team"
                            android:textSize="@dimen/sp15"
                            android:layout_width="@dimen/m90"
                            android:layout_height="@dimen/m31"
                            android:gravity="center"
                            android:background="@drawable/small_title_bg"
                            android:textColor="@color/white"/>
                    <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_date_select"
                            android:layout_marginTop="@dimen/m10"
                            android:layout_width="match_parent"
                            android:layout_height="40dp">

                    </androidx.recyclerview.widget.RecyclerView>
                    <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_team_list"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                    </androidx.recyclerview.widget.RecyclerView>

                </LinearLayout>
            </www.linwg.org.lib.LCardView>


        </LinearLayout>
    </ScrollView>
</LinearLayout>