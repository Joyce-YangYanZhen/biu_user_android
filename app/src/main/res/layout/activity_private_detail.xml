<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activity.changguan.ChaungguanDetailActivity">

    <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="@dimen/m64">

        <ImageView
                android:id="@+id/back_btn"
                android:layout_width="28dp"
                android:layout_height="@dimen/m18"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/m15"
                android:layout_marginLeft="@dimen/m20"
                android:src="@drawable/back"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/private_details"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/m10"
                android:textSize="@dimen/sp20"
                android:textColor="@color/top_heiziti"/>

        <ImageView
                android:id="@+id/share_btn"
                android:layout_width="@dimen/m25"
                android:layout_height="@dimen/m25"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/m15"
                android:layout_marginRight="@dimen/m20"
                android:src="@drawable/share_icon"/>
    </RelativeLayout>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/m300">

                <ImageView
                        android:id="@+id/banner"
                        android:layout_width="match_parent"
                        android:scaleType="fitCenter"
                        android:layout_height="@dimen/m300"/>

                <LinearLayout
                        android:layout_width="50dp"
                        android:layout_height="48dp"
                        android:layout_gravity="right|top"
                        android:layout_marginRight="@dimen/m7"
                        android:background="@drawable/shape_bg_shoucang"
                        android:gravity="center">

                    <ImageView
                            android:id="@+id/iv_collect"
                            android:layout_width="@dimen/m20"
                            android:layout_height="@dimen/m20"
                            android:src="@drawable/xin_2"
                            />
                </LinearLayout>

                <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/m100"
                        android:layout_gravity="bottom"
                        android:orientation="vertical"
                        android:background="@drawable/private_yy">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center"
                            android:layout_marginBottom="@dimen/m10"
                            android:gravity="center">

                        <TextView
                                android:id="@+id/tv_teacher_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/sp15"
                                android:textColor="@color/contents_text"
                                android:text="私教姓名"/>

                        <ImageView
                                android:id="@+id/iv_sex"
                                android:layout_width="@dimen/m14"
                                android:layout_height="@dimen/m14"
                                android:src="@drawable/women_icon"/>
                    </LinearLayout>

                    <TextView
                            android:id="@+id/tips"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/m20"
                            android:layout_marginRight="@dimen/m20"
                            android:layout_marginBottom="@dimen/m10"
                            android:layout_gravity="bottom"
                            tools:text="我是气场一米八的大长腿，是一位重度咖啡爱好者，喜欢尝试新事物。"
                            android:textColor="@color/color_4A4A4A"
                            android:textSize="@dimen/sp12"/>
                </FrameLayout>


            </FrameLayout>

            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/m22">

                <TextView
                        android:id="@+id/tv_sum_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center_vertical"
                        tools:text="累计服务时长：154小时"
                        android:textSize="@dimen/sp12"
                        android:layout_marginLeft="@dimen/m11"
                        android:textColor="@color/color_4A4A4A"/>

                <TextView
                        android:id="@+id/tv_teacher_pinfen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:text="7.8fen"
                        android:textSize="@dimen/sp13"
                        android:layout_marginRight="@dimen/m19"
                        android:textColor="@color/btn_text_color"/>
            </FrameLayout>

            <www.linwg.org.lib.LCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:shadowStartAlpha="10"
                    app:cornerRadius="@dimen/m8"
                    app:shadowSize="@dimen/m2"
                    android:paddingTop="@dimen/m5">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/m5"
                        android:background="@drawable/shape_btn_bg_white">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tv_private_label"
                            android:layout_marginLeft="@dimen/m10"
                            android:textSize="@dimen/sp12"
                            android:layout_marginTop="@dimen/m2"
                            android:textColor="@color/color_929292"/>

                    <com.noplugins.keepfit.userplatform.util.ui.ZFlowLayout
                            android:id="@+id/zf_label"
                            android:layout_width="match_parent"
                            android:layout_marginRight="@dimen/m10"
                            android:layout_marginLeft="@dimen/m10"
                            android:layout_height="wrap_content"/>
                </LinearLayout>
            </www.linwg.org.lib.LCardView>

            <www.linwg.org.lib.LCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:shadowStartAlpha="10"
                    app:cornerRadius="@dimen/m8"

                    android:layout_marginTop="@dimen/m5"
                    app:shadowSize="@dimen/m2"
                    android:paddingTop="@dimen/m5">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/m5"
                        android:background="@drawable/shape_btn_bg_white">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tv_private_skill"
                            android:layout_marginLeft="@dimen/m10"
                            android:textSize="@dimen/sp12"
                            android:layout_marginTop="@dimen/m2"
                            android:textColor="@color/color_929292"/>

                    <com.noplugins.keepfit.userplatform.util.ui.ZFlowLayout
                            android:id="@+id/zf_skill"
                            android:layout_width="match_parent"
                            android:layout_marginRight="@dimen/m10"
                            android:layout_marginLeft="@dimen/m10"
                            android:layout_height="wrap_content"/>
                </LinearLayout>
            </www.linwg.org.lib.LCardView>

            <www.linwg.org.lib.LCardView
                    android:id="@+id/rl_private"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:shadowStartAlpha="10"
                    app:cornerRadius="@dimen/m8"
                    app:shadowSize="@dimen/m2"
                    android:layout_marginTop="@dimen/m5"
                    android:paddingTop="@dimen/m10">

                <RelativeLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/m5"
                        android:background="@drawable/shape_btn_bg_white">

                    <TextView
                            android:text="@string/tv_class_reserve"
                            android:textSize="@dimen/sp13"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="@dimen/m10"
                            android:textColor="@color/color_9B9B9B"/>

                    <TextView
                            android:id="@+id/tv_private_all"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tv_all"
                            android:textSize="@dimen/sp13"
                            android:layout_marginRight="@dimen/m20"
                            android:gravity="center"
                            android:layout_alignParentRight="true"
                            android:textColor="@color/color_6D7278"/>

                    <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_private"
                            android:layout_marginTop="@dimen/m20"
                            android:layout_below="@+id/tv_private_all"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                </RelativeLayout>
            </www.linwg.org.lib.LCardView>

            <TextView
                    android:id="@+id/tv_next_select"
                    android:layout_width="@dimen/m200"
                    android:layout_height="@dimen/m60"
                    android:background="@drawable/btn_bg_ok"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/m15"
                    android:text="选择场馆"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp20"
                    android:layout_marginBottom="@dimen/m30"/>


        </LinearLayout>
    </ScrollView>
</LinearLayout>