<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="@dimen/m64"
            android:gravity="center_vertical">

        <ImageView
                android:id="@+id/back_btn"
                android:layout_width="28dp"
                android:layout_height="@dimen/m18"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/m20"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/m20"
                android:src="@drawable/back"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/m20"
                android:layout_centerHorizontal="true"
                android:textSize="@dimen/sp20"
                android:textColor="@color/top_heiziti"/>
    </RelativeLayout>


    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/m66"
            android:background="@drawable/bg_white_66">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="总计:"
                android:layout_marginLeft="@dimen/m20"
                android:textColor="@color/color_4A4A4A"
                android:layout_gravity="left|center_vertical"
                android:textSize="@dimen/sp15"/>
        <TextView
                android:id="@+id/tv_sum_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥0"
                android:layout_marginRight="@dimen/m20"
                android:textColor="@color/contents_text"
                android:layout_gravity="right|center_vertical"
                android:textSize="@dimen/sp20"/>
    </FrameLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_white_66">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/m20"
                android:visibility="gone"
                android:layout_marginTop="@dimen/m19">
            <ImageView
                    android:id="@+id/iv_quanyi"
                    android:layout_width="@dimen/m36"
                    android:layout_height="@dimen/m36"
                    android:src="@drawable/quanyi"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/pay_quanyi"
                    android:layout_marginLeft="@dimen/m5"
                    android:layout_toRightOf="@+id/iv_quanyi"
                    android:textColor="@color/contents_text"
                    android:textSize="@dimen/sp18" />


            <CheckBox
                    android:id="@+id/cb_product_suggest"
                    android:layout_width="@dimen/m22"
                    android:layout_height="@dimen/m22"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/m30"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/btn_checkbox"
                    android:button="@null"
                    android:checked="false" />
        </RelativeLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/m20"
                android:layout_marginTop="@dimen/m20">
            <ImageView
                    android:id="@+id/iv_weixin"
                    android:layout_width="@dimen/m36"
                    android:layout_height="@dimen/m36"
                    android:src="@drawable/zhifubao"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/pay_zhifubao"
                    android:layout_marginLeft="@dimen/m5"
                    android:layout_toRightOf="@+id/iv_weixin"
                    android:textColor="@color/contents_text"
                    android:textSize="@dimen/sp18" />

            <CheckBox
                    android:id="@+id/cb_fault_feedback"
                    android:layout_width="@dimen/m22"
                    android:layout_alignParentRight="true"
                    android:layout_height="@dimen/m22"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/m30"
                    android:background="@drawable/btn_checkbox"
                    android:button="@null"
                    android:checked="false" />
        </RelativeLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/m20"
                android:layout_marginTop="@dimen/m20"
                android:layout_marginBottom="@dimen/m19">
            <ImageView
                    android:id="@+id/iv_zhifubao"
                    android:layout_width="@dimen/m36"
                    android:layout_height="@dimen/m36"
                    android:src="@drawable/weixin_pay"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/pay_weixin"
                    android:layout_marginLeft="@dimen/m5"
                    android:layout_toRightOf="@+id/iv_zhifubao"
                    android:textColor="@color/contents_text"
                    android:textSize="@dimen/sp18" />

            <CheckBox
                    android:id="@+id/cb_other"
                    android:layout_width="@dimen/m22"
                    android:layout_height="@dimen/m22"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/m30"
                    android:background="@drawable/btn_checkbox"
                    android:button="@null"
                    android:checked="false" />
        </RelativeLayout>

    </LinearLayout>

    <TextView
            android:id="@+id/tv_tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="tips"
            android:visibility="gone"
            android:gravity="center"
            android:textColor="@color/color_6D7278"
            android:textSize="@dimen/sp13"/>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:id="@+id/tv_pay"
                android:layout_width="@dimen/m209"
                android:layout_height="@dimen/m60"
                android:background="@drawable/btn_bg_ok"
                android:layout_gravity="bottom|center_horizontal"
                android:text="支付"
                android:textSize="@dimen/sp20"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_marginBottom="@dimen/m80"/>
    </FrameLayout>

</LinearLayout>