<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/color_F8F8F8"
              android:fitsSystemWindows="true"
              android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/m64"
        android:background="@drawable/daohanglan">
        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/m10"
            android:text="@string/tv85"
            android:textColor="@color/top_heiziti"
            android:textSize="@dimen/sp20"
            android:textStyle="bold"/>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/m32"
        android:layout_marginLeft="@dimen/m44"
        android:layout_marginRight="@dimen/m44"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/zhanghu_message_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="@string/tv141"
                    android:textColor="@color/top_heiziti"
                    android:textSize="@dimen/sp18"/>

                <LinearLayout
                    android:id="@+id/lin1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/m4"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/lin_draw"
                    android:orientation="horizontal"
                    android:visibility="invisible"/>

            </LinearLayout>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/system_message_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="@string/tv142"
                    android:textColor="@color/top_heiziti"
                    android:textSize="@dimen/sp18"/>

                <LinearLayout
                    android:id="@+id/lin2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/m4"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/lin_draw"
                    android:orientation="horizontal"
                    android:visibility="invisible"/>

            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/user_message_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="@string/tv143"
                    android:textColor="@color/top_heiziti"
                    android:textSize="@dimen/sp18"/>

                <LinearLayout
                    android:id="@+id/lin3"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/m4"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/lin_draw"
                    android:orientation="horizontal"
                    android:visibility="invisible"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>