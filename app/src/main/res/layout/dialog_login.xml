<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="@drawable/shape_dialog_bg"
              android:layout_height="@dimen/m500">
    <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="用户协议及隐私政策"
            android:textSize="@dimen/sp15"
            android:layout_marginTop="@dimen/m30"
            android:textColor="@color/contents_text"/>
        <ImageView
            android:id="@+id/image"
            android:layout_gravity="center"
            android:maxHeight="150dp"
            android:maxWidth="150dp"
            android:layout_marginBottom="@dimen/m10"
            android:layout_marginLeft="@dimen/m16"
            android:layout_marginRight="@dimen/m16"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    <WebView
            android:layout_below="@+id/title"
            android:id="@+id/webView"
            android:layout_width="match_parent"
            android:layout_height="400dp">
    </WebView>


    <LinearLayout
            android:layout_below="@+id/webView"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
        <TextView
                android:id="@+id/negtive"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="不同意"
                android:textSize="@dimen/sp20"
                android:gravity="center"
                android:textColor="@color/btn_text_gray"/>
        <TextView
                android:id="@+id/positive"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="同意"
                android:gravity="center"
                android:textSize="@dimen/sp20"
                android:textColor="@color/btn_text_color"/>
    </LinearLayout>
</RelativeLayout>