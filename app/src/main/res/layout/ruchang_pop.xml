<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@drawable/ruchang_bg"
            android:layout_height="@dimen/m285">

        <TextView
                android:layout_marginTop="@dimen/m15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv153"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:textStyle="bold"
                android:textColor="@color/top_heiziti"
                android:textSize="@dimen/sp15"
                />

        <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginTop="@dimen/m10"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content">

            <ImageView
                    android:id="@+id/img_set"
                    android:layout_width="@dimen/m20"
                    android:layout_height="@dimen/m20"
                    android:src="@drawable/xiaolian_moren"
                    />

            <TextView
                    android:layout_marginTop="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tv154"
                    android:gravity="center_horizontal"
                    android:textColor="@color/color_4A4A4A"
                    android:textSize="@dimen/sp12"
                    />
        </LinearLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="66dp"
                android:layout_marginRight="66dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

            <ImageView
                    android:id="@+id/xiaolian1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/m25"
                    android:src="@drawable/xiaolian1"
                    />

            <ImageView
                    android:id="@+id/xiaolian2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/m25"
                    android:src="@drawable/xiaolian2"
                    />

            <ImageView
                    android:id="@+id/xiaolian3"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/m25"
                    android:src="@drawable/xiaolian3"
                    />

            <ImageView
                    android:id="@+id/xiaolian4"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/m25"
                    android:src="@drawable/xiaolian4"
                    />

            <ImageView
                    android:id="@+id/xiaolian5"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/m25"
                    android:src="@drawable/xiaolian5"
                    />
        </LinearLayout>

        <TextView
                android:layout_marginTop="@dimen/m20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/color_4A4A4A"
                android:text="@string/tv155"
                android:layout_marginLeft="@dimen/m35"
                android:layout_marginRight="@dimen/m35"
                android:textSize="@dimen/sp13"/>
    </LinearLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/m94"
            android:layout_marginRight="@dimen/m94"
            android:layout_marginBottom="@dimen/m20"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/cancel_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp20"
                android:layout_alignParentLeft="true"
                android:textStyle="bold"
                android:textColor="@color/color_6D7278"
                android:text="@string/alert_dialog_cached_cancel"
                />
        <TextView
                android:id="@+id/sure_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp20"
                android:layout_alignParentRight="true"
                android:textStyle="bold"
                android:textColor="@color/btn_text_color"
                android:text="@string/tv4"
                />

    </RelativeLayout>

</RelativeLayout>