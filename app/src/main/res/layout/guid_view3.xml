<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">
    <!--第四个View布局（也就是放置按钮的那个布局）要使用FrameLayout
    因为需要使用Button在ImageView上方，普通的线性布局做不到，所以需
    要使用帧布局（FrameLayout），即后定义的布局在上方，一层一层叠加-->
    <TextView
            android:id="@+id/tv_jump"
            android:layout_width="wrap_content"
            android:minWidth="@dimen/m61"
            android:gravity="center"
            android:layout_height="@dimen/m24"
            android:text="跳过"
            android:visibility="invisible"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/m17"
            android:layout_marginRight="@dimen/m20"
            android:background="@drawable/button_shape"/>
    <ImageView
            android:id="@+id/iv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@mipmap/slices_bg_3"
            android:layout_marginTop="@dimen/m40"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tv_jump"/>
</RelativeLayout>