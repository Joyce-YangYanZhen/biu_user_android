<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@color/transparent"
        android:layout_height="match_parent">

    <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/m6"
            android:layout_marginRight="@dimen/m6"
            android:layout_marginTop="@dimen/m62"
            android:layout_marginBottom="@dimen/m51"
            android:background="@drawable/shape_btn_bg_white"
            android:layout_height="match_parent">

        <TextView
                android:layout_width="wrap_content"
                android:text="用户协议"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/m39"
                android:textSize="@dimen/sp15"
                android:visibility="gone"
                android:textColor="@color/top_heiziti"
                android:layout_height="wrap_content"/>

        <ScrollView
                android:id="@+id/content_layout"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/m35"
                android:layout_marginBottom="@dimen/m61"
                android:layout_height="600dp">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <WebView
                        android:id="@+id/webView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                </WebView>
            </LinearLayout>
        </ScrollView>

        <RelativeLayout
                android:layout_marginLeft="@dimen/m88"
                android:layout_marginRight="@dimen/m88"
                android:layout_width="match_parent"
                android:layout_marginBottom="@dimen/m23"
                android:layout_alignParentBottom="true"
                android:layout_height="wrap_content">
            <TextView
                    android:id="@+id/no_agree_btn"
                    android:text="不同意"
                    android:textSize="@dimen/sp20"
                    android:textColor="@color/btn_text_gray"
                    android:layout_width="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/agree_btn"
                    android:text="同意"
                    android:textSize="@dimen/sp20"
                    android:textColor="@color/top_heiziti"
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_height="wrap_content"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>