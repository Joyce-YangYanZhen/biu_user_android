<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
        >

    <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="@dimen/m45"
            android:gravity="center_vertical">

        <ImageView
                android:id="@+id/back_btn"
                android:layout_width="28dp"
                android:layout_height="@dimen/m18"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/m20"
                android:src="@drawable/back"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择区域"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:textSize="@dimen/sp20"
                android:textColor="@color/top_heiziti"/>

        <TextView
                android:id="@+id/share_btn"
                android:layout_width="@dimen/m30"
                android:layout_height="wrap_content"
                android:textColor="@color/btn_text_color"
                android:textSize="@dimen/sp15"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/m20"
                android:text="@string/alert_dialog_cached_ok"/>
    </RelativeLayout>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="目前定位"
            android:textSize="@dimen/m13"
            android:layout_marginLeft="@dimen/m20"
            android:textColor="@color/color_6D7278"/>
    <www.linwg.org.lib.LCardView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/m50"
                android:gravity="center_vertical"
                android:orientation="horizontal">
            <TextView
                    android:id="@+id/tv_nowLoc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/m20"
                    android:layout_alignParentLeft="true"
                    tools:text="红提傲气是奥迪"/>
            <TextView
                    android:id="@+id/tv_re_locate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="重新定位"
                    android:textColor="@color/btn_text_color"
                    android:textSize="@dimen/sp13"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/m20"
                    android:layout_toLeftOf="@+id/tv_nowLoc"
                    />
        </RelativeLayout>
    </www.linwg.org.lib.LCardView>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="选择区域"
            android:textSize="@dimen/m13"
            android:layout_marginLeft="@dimen/m20"
            android:layout_marginTop="@dimen/m20"
            android:textColor="@color/color_6D7278"/>

    <me.zhouzhuo.zzsecondarylinkage.ZzSecondaryLinkage
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/m280"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/m280"
            android:orientation="horizontal">
        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_province"
                android:layout_width="@dimen/m100"
                android:layout_height="wrap_content"/>
        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_city"
                android:layout_width="@dimen/m100"
                android:layout_height="wrap_content"/>
        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_area"
                android:layout_width="@dimen/m100"
                android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>