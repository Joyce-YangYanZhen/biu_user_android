<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
              android:background="@drawable/shape_btn_bg_dialog"
    android:layout_height="wrap_content">
    <com.ycuwq.datepicker.time.WeightPicker
        android:id="@+id/dayPicker_dialog"
        android:layout_width="match_parent"
        android:isScrollContainer="true"
        android:layout_height="wrap_content">
    </com.ycuwq.datepicker.time.WeightPicker>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:padding="16dp"
            android:id="@+id/btn_dialog_date_cancel"
            android:background="#fff"
            android:text="@string/ycuwq_datepicker_cancel"
            android:textColor="@color/com_ycuwq_datepicker_selectedTextColor"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <ImageView
            android:background="@color/com_ycuwq_datepicker_divider"
            android:layout_width="1px"
            android:layout_height="match_parent" />
        <Button
            android:padding="16dp"
            android:id="@+id/btn_dialog_date_decide"
            android:background="#fff"
            android:text="@string/ycuwq_datepicker_decide"
            android:textColor="#76CEE1"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>